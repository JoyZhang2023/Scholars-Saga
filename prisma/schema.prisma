generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model classes {
  id            Int       @id
  class_section String?   @db.VarChar(100)
  class_number  Int?
  section_time  DateTime? @db.Time(6)
  professor     String?   @db.VarChar(100)
  class_size    Int?
}

model counselors {
  id              Int     @id
  first_name      String? @db.VarChar(100)
  last_name       String? @db.VarChar(100)
  email           String? @db.VarChar(100)
  user_type       String? @db.VarChar(25)
  department      String? @db.VarChar(100)
  office_location String? @db.VarChar(100)
}

model students {
  id              Int       @id
  first_name      String?   @db.VarChar(50)
  last_name       String?   @db.VarChar(50)
  email           String?   @db.VarChar(100)
  user_type       String?   @db.VarChar(25)
  enrollment_date DateTime? @db.Date
  degree_path     String?   @db.VarChar(100)
  profile_picture String?   @db.VarChar(255)
}

model theme_settings {
  id                 Int     @id @default(autoincrement())
  primary_color      String? @db.VarChar(7)
  secondary_color    String? @db.VarChar(7)
  text_primary       String? @db.VarChar(7)
  text_secondary     String? @db.VarChar(7)
  background_default String? @db.VarChar(7)
}

model users {
  id         Int    @id
  email      String @unique(map: "unique_email") @db.VarChar(100)
  password   String @db.VarChar(25)
  role       String @db.VarChar(1)
  profile_id Int?
}

model appointments {
  id           Int    @id
  selectedDate String
  selectedTime String
}
